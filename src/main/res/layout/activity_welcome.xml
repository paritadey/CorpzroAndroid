<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/background"
    tools:context="com.example.parita.corpzro_parita.Welcome">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/tvemai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Welcome !! "
        android:textColor="#ffffff"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvemai"
        android:layout_marginTop="14dp"
        android:textColor="#ffffff"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/fbemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etUsername"
        android:layout_marginTop="1dp"
        android:textColor="#ffffff" />
    <TextView
        android:id="@+id/gplusmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fbemail"
        android:layout_marginTop="1dp"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/fbname"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gplusmail"
        android:layout_marginTop="18dp"
        android:textColor="#ffffff"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/fbtime"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fbname"
        android:layout_alignBottom="@+id/fbname"
        android:layout_toEndOf="@+id/fbname"
        android:layout_toRightOf="@+id/fbname"
        android:textColor="#ffffff"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/fbtype"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fbtime"
        android:layout_alignBottom="@+id/fbtime"
        android:layout_toEndOf="@+id/fbtime"
        android:layout_toRightOf="@+id/fbtime"
        android:textColor="#ffffff"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/gplusname"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fbname"
        android:layout_marginTop="18dp"
        android:textColor="#ffffff"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/gplustime"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gplusname"
        android:layout_alignBottom="@+id/gplusname"
        android:layout_toEndOf="@+id/gplusname"
        android:layout_toRightOf="@+id/gplusname"
        android:textColor="#ffffff"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/gplustype"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gplustime"
        android:layout_alignBottom="@+id/gplustime"
        android:layout_toEndOf="@+id/gplustime"
        android:layout_toRightOf="@+id/gplustime"
        android:textColor="#ffffff"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/bLogout"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/rounded_button"
        android:textAllCaps="false"
        android:text="LogOut" />

    <TextView
        android:id="@+id/fbappid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/fbtype"
        android:text="@string/facebook_app_id"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/gplusappid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gplustype"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:visibility="invisible"/>

</RelativeLayout>
